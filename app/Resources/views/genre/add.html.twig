{% extends 'base.html.twig' %}

{% block body %}
    <h1>Add genre.</h1>
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.name, 'Title: ') }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_widget(form.Save, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

