{% extends 'base.html.twig' %}

    {% block body %}
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name, 'Title: ') }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.description, 'Description: ') }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>


                <div class="form-group">
                    {{ form_label(form.author, 'Author: ') }}
                    {{ form_widget(form.author, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.year, 'Year: ') }}
                    {{ form_widget(form.year, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.genre, 'Genre: ') }}
                    {{ form_widget(form.genre, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.price, 'Price: ') }}
                    {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.quantity, 'Quantity: ') }}
                    {{ form_widget(form.quantity, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.image, 'Image: ') }}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_widget(form.Save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>

                {{ form_end(form) }}
            </div>
        </div>

    {% endblock %}
