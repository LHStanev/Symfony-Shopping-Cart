{% extends 'base.html.twig' %}

{% block body  %}
    <h3 class="text-center">Latest Books</h3><a class="btn btn-info" href="{{ path('books_all') }}">View All</a>
    <table class="table table-bordered">
        <thead>
        <th>Id</th>
        <th>Book</th>
        <th>Genre</th>
        <th>Quantity</th>
        <th>Current Discount</th>
        <th>Year</th>
        <th>Edit</th>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td><a href="{{ path('book_by_id', {id: book.id}) }}">{{ book.name }}</a></td>
                <td>{{ book.genre }}</td>
                <td>{{ book.quantity }}</td>
                <td>current discount</td>
                <td>{{ book.year }}</td>
                <td><a href="{{ path('edit_book', {id: book.id}) }}">Edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-info btn-right" href="{{ path('add_book') }}">Add</a>

    <br>

    <h3 class="text-center">Book genres</h3>
    <table class="table table-bordered">
        <thead>
        <th>Id</th>
        <th>Name</th>
        <th>Edit</th>
        <th>Delete</th>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.id }}</td>
                <td>{{ genre.name }}</td>
                <td><a href="{{ path('edit_genre', {id: genre.id }) }}">Edit</a></td>
                <td><a href="{{ path('delete_genre', {id: genre.id }) }}">Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-info btn-right" href="{{ path('add_genre') }}">Add</a>

{% endblock %}