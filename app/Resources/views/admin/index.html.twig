{% extends 'base.html.twig' %}

{% block body  %}
    <h3 class="text-center">New Users</h3><span><a class="btn btn-info" href="{{ path('admin_users') }}">View All</a></span>
    <table class="table table-bordered">
        <thead>
        <th>Id</th>
        <th>Username</th>
        <th>Email</th>
        <th>Cash (USD)</th>
        <th>Role</th>
        <th>Edit</th>
        <th>Ban/Unban</th>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.initialCash - user.spentMoney }}</td>
                <td>
                    {% for role in user.roles %}
                        {{ role }},
                    {% endfor %}
                </td>
                <td><a href="{{ path('edit_user', {id:user.id} )}}">Edit</a></td>
                <td><a href="{{ path('admin_user_ban', {id:user.id}) }}">{% if user.enabled == true %}
                                                                            Ban
                                                                            {% else %}
                                                                           Unban
                                                                         {% endif %}
            </a></td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
    <br>

    <h3 class="text-center">Latest Books</h3><a class="btn btn-info" href="{{ path('books_all') }}">View All</a>
    <table class="table table-bordered">
        <thead>
        <th>Id</th>
        <th>Book</th>
        <th>Genre</th>
        <th>Quantity</th>
        <th>Current Discount</th>
        <th>Year</th>
        <th>Edit</th>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.name }}</td>
                <td>{{ book.genre }}</td>
                <td>{{ book.quantity }}</td>
                <td>current discount</td>
                <td>{{ book.year }}</td>
                <td><a href="{{ path('edit_book', {id: book.id}) }}">Edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-info btn-right" href="{{ path('add_book') }}">Add</a>

{% endblock %}